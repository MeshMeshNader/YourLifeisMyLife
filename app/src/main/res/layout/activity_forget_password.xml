<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:context=".Auth.ForgetPassword">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/logo_w"
            android:layout_height="@dimen/logo_h"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/et_margin_start_end"
            android:src="@drawable/hands_tran" />


        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/et_margin_vertical"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Your Life is My Life"
            android:textColor="@color/pink_light"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/text_forget_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_text"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Enter your email to reset \nyour account password!"
            android:textColor="@color/pink_light"
            android:textSize="18sp"
            android:textStyle="italic|bold" />


        <EditText
            android:id="@+id/reset_email_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/text_forget_password_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/blue"
            android:textSize="18sp">

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rest_password_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@id/buttom_text"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/et_margin_start_end"
            android:layout_marginEnd="@dimen/et_margin_start_end"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape_pink"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/buttom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an Account, "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/reset_create_an_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/pink_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>